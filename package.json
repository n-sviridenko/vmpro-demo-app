{
  "name": "demo-app",
  "author": "Nikita Sviridenko <mail.sviridenko@gmail.com>",
  "license": "ISC",
  "version": "1.0.0",
  "description": "Demo app",
  "scripts": {
    "rimraf": "rimraf",
    "tslint": "tslint",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server",
    "webdriver-manager": "webdriver-manager",
    "http-server": "http-server",
    "protractor": "protractor",
    "protractor:live": "protractor --elementExplorer",
    "i18n": "ng-xi18n",
    "postinstall": "npm run webdriver:update",
    "clean": "npm run rimraf -- dist",
    "watch": "npm run watch:dev",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:dev:hmr": "npm run watch:dev -- --hot",
    "watch:test": "npm run test -- --auto-watch --no-single-run",
    "build": "npm run build:dev",
    "prebuild:dev": "npm run clean",
    "build:dev": "webpack --config client/config/webpack.dev.js --progress --profile --colors --display-error-details --display-cached",
    "prebuild:prod": "npm run clean",
    "build:prod": "webpack --config client/config/webpack.prod.js  --progress --profile --colors --display-error-details --display-cached --bail",
    "server": "npm run server:dev",
    "server:dev": "webpack-dev-server --config client/config/webpack.dev.js --progress --profile --colors --watch --display-error-details --display-cached --content-base client/src/",
    "server:dev:hmr": "npm run server:dev -- --inline --hot",
    "server:prod": "http-server dist -c-1 --cors",
    "server:prod:ci": "http-server dist -p 3000 -c-1 --cors",
    "webdriver:update": "npm run webdriver-manager update",
    "webdriver:start": "npm run webdriver-manager start",
    "lint": "npm run tslint --- \"src/**/*.ts\" --exclude \"client/src/**/*.spec.ts\" --exclude \"client/src/**/*.e2e.ts\"",
    "e2e": "npm-run-all -p -r server:prod:ci protractor",
    "e2e:live": "npm-run-all -p -r server:prod:ci protractor:live",
    "test": "karma start",
    "ci": "npm run lint && npm run test && npm run build:prod && npm run e2e"
  },
  "dependencies": {
    "@angular/common": "~2.4.3",
    "@angular/compiler": "~2.4.3",
    "@angular/core": "~2.4.3",
    "@angular/forms": "~2.4.3",
    "@angular/http": "~2.4.3",
    "@angular/platform-browser": "~2.4.3",
    "@angular/platform-browser-dynamic": "~2.4.3",
    "@angular/router": "~3.4.3",
    "@angularclass/hmr": "^1.2.2",
    "@angularclass/hmr-loader": "^3.0.2",
    "angular2-moment": "^1.0.0-beta.4",
    "angular2-template-loader": "^0.4.0",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "intl": "^1.2.5",
    "joi": "^10.1.0",
    "joi-browser": "^10.0.6",
    "lodash": "^4.17.4",
    "moment": "^2.14.1",
    "qs": "^6.3.0",
    "rxjs": "~5.0.3",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^2.4.0",
    "@angular/platform-server": "^2.4.0",
    "@types/core-js": "^0.9.35",
    "@types/jasmine": "2.5.41",
    "@types/lodash": "ts2.0",
    "@types/node": "^6.0.45",
    "@types/selenium-webdriver": "^2.53.39",
    "@types/zone.js": "^0.0.27",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "codelyzer": "^2.0.0-beta.4",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "exports-loader": "^0.6.3",
    "expose-loader": "^0.7.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.21.0",
    "http-server": "^0.9.0",
    "imports-loader": "^0.6.5",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-remap-istanbul": "^0.2.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "2.0.1",
    "node-sass": "^4.2.0",
    "npm-run-all": "^4.0.0",
    "protractor": "^4.0.14",
    "raw-loader": "0.5.1",
    "remap-istanbul": "^0.8.4",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.0",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "to-string-loader": "^1.1.4",
    "ts-node": "^2.0.0",
    "tslib": "^1.5.0",
    "tslint": "^4.4.2",
    "tslint-loader": "^3.3.0",
    "typescript": "~2.0.9",
    "url-loader": "^0.5.7",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0",
    "webpack-md5-hash": "^0.0.5",
    "webpack-merge": "~2.4.0"
  }
}
